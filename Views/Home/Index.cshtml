@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Trafficy</title>
    <link rel="icon" href="@Url.Action("Serve", "Home", new { id = "personal_logo" })" type="image/png" sizes="64x64" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
            background-image: 
                radial-gradient(#cbd5e1 1.5px, transparent 1.5px), 
                linear-gradient(to right, #f1f5f9 1px, transparent 1px), 
                linear-gradient(to bottom, #f1f5f9 1px, transparent 1px);
            background-size: 24px 24px, 96px 96px, 96px 96px;
            background-attachment: fixed;
        }

        #pillow-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            pointer-events: none;
            z-index: 0;
        }

        .pillow {
            position: absolute;
            background-color: #e2e8f0;
            border-radius: 30%;
            opacity: 0.6;
            box-shadow: inset -2px -2px 6px rgba(0,0,0,0.05);
            animation: fall linear forwards;
            pointer-events: none;
        }

        @@keyframes fall {
            0% {
                top: -10%;
                opacity: 0;
                transform: rotate(0deg);
            }
            10% {
                opacity: 0.8;
            }
            90% {
                opacity: 0.8;
            }
            100% {
                top: 110%;
                opacity: 0;
                transform: rotate(360deg);
            }
        }

        .relative-content {
            position: relative;
            z-index: 10;
        }
    </style>
</head>
<body class="text-slate-800 antialiased flex flex-col min-h-screen">

    <div id="pillow-container"></div>

    <nav class="fixed w-full z-50 top-0 start-0 bg-white/80 backdrop-blur-md border-b border-slate-200">
        <div class="max-w-6xl mx-auto flex flex-wrap items-center justify-between p-4">
            <a href="#" class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-slate-900 rounded-lg flex items-center justify-center text-white shadow-sm">
                    <i class="fa-solid fa-layer-group text-sm"></i>
                </div>
                <span class="self-center text-lg font-bold tracking-tight text-slate-900">Trafficy</span>
            </a>
            <div class="hidden md:block">
                <ul class="flex space-x-8 text-sm font-medium">
                    <li><a href="#mission" class="text-slate-600 hover:text-slate-900 transition">Mission</a></li>
                    <li><a href="#apps" class="text-slate-600 hover:text-slate-900 transition">Apps</a></li>
                </ul>
            </div>
            <button class="md:hidden text-slate-500 hover:text-slate-900">
                <i class="fa-solid fa-bars text-xl"></i>
            </button>
        </div>
    </nav>

    <section id="mission" class="relative-content pt-32 pb-20 lg:pt-48 lg:pb-32 bg-transparent">
        <div class="relative z-10 px-4 mx-auto max-w-4xl text-center">
            <h1 class="mb-6 text-4xl font-bold tracking-tight leading-tight text-slate-900 md:text-6xl">
                Clarity Over Conflict.
            </h1>
            <p class="mb-10 text-lg font-normal text-slate-600 lg:text-xl sm:px-8 lg:px-24 leading-relaxed">
                Most problems arise from a lack of clarity. We aim to fix this by augmenting communication.
            </p>
            <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
                <a href="#apps" class="inline-flex justify-center items-center py-3 px-8 text-sm font-semibold text-white rounded-lg bg-blue-600 hover:bg-blue-700 transition shadow-sm">
                    View Solutions
                </a>
            </div>
        </div>
    </section>

    <section id="apps" class="relative-content bg-transparent py-24 border-t border-slate-200">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex flex-col md:flex-row items-baseline justify-between mb-12">
                <h2 class="text-2xl font-bold text-slate-900">Our Apps</h2>
                <p class="text-slate-500 text-sm mt-2 md:mt-0">Tools designed to bridge the information gap.</p>
            </div>

            <div class="bg-white/80 backdrop-blur-md rounded-2xl shadow-sm border border-slate-200 overflow-hidden flex flex-col md:flex-row hover:shadow-md transition duration-300">

                <div class="md:w-1/3 bg-slate-50/30 flex items-center justify-center p-12 border-b md:border-b-0 md:border-r border-slate-200">
                    <a href="@Url.Action("Tabsy", "Home")" class="transition-transform duration-200 hover:scale-105">
                        <img src="@Url.Action("Serve", "Home", new { id = "tabsy_icon" })" alt="Tabsy Icon" class="w-24 h-24 rounded-[22%] shadow-lg">
                    </a>
                </div>

                <div class="p-8 md:p-10 md:w-2/3 flex flex-col justify-center">
                    <div class="flex items-center space-x-3 mb-4">
                        <a href="@Url.Action("Tabsy", "Home")" class="transition-transform duration-200 hover:scale-105">
                            <h3 class="text-2xl font-bold text-slate-900">Tabsy</h3>
                        </a>
                        <span class="px-2.5 py-0.5 bg-blue-50 text-blue-700 text-[10px] font-bold rounded border border-blue-100 uppercase tracking-widest">Available Now</span>
                    </div>

                    <p class="text-slate-600 leading-relaxed mb-8">
                        Tabsy is a productivity/utility app that helps keep track of informal debts between friends and allows users to communicate what they are owed. We understand that freedom begins when the truth is spoken, this app was made to assist people in speaking their truth so they can liberate themselves from the burden of unspoken truths.
                    </p>

                    <div class="flex flex-wrap gap-4">
                        <a href="https://apps.apple.com/us/app/tabsy/id6755607962" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center w-60 px-5 py-2.5 bg-black text-white rounded-lg hover:bg-slate-800 hover:scale-105 hover:shadow-lg transition-all duration-200">
                            <i class="fa-brands fa-apple text-xl mr-2.5"></i>
                            <div class="text-left">
                                <div class="text-[10px] uppercase font-medium text-slate-300 leading-none mb-0.5">Download On</div>
                                <div class="text-sm font-bold leading-none">App Store</div>
                            </div>
                        </a>
                        <a href="https://play.google.com/store/apps/details?id=com.tabtracker.app" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center w-60 px-5 py-2.5 bg-black text-white rounded-lg hover:bg-slate-800 hover:scale-105 hover:shadow-lg transition-all duration-200">
                            <i class="fa-brands fa-google-play text-xl mr-2.5"></i>
                            <div class="text-left">
                                <div class="text-[10px] uppercase font-medium text-slate-300 leading-none mb-0.5">Download On</div>
                                <div class="text-sm font-bold leading-none">Google Play</div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="relative-content bg-transparent border-t border-slate-200 mt-auto">
        <div class="max-w-6xl mx-auto px-4 py-12">
            <div class="grid md:grid-cols-2 gap-8 items-start">
                <div>
                    <div class="flex items-center space-x-2 mb-4">
                        <div class="w-6 h-6 bg-slate-900 rounded flex items-center justify-center text-white">
                            <i class="fa-solid fa-layer-group text-[10px]"></i>
                        </div>
                        <span class="font-bold text-slate-900">Trafficy</span>
                    </div>
                    <p class="text-slate-500 text-sm max-w-xs leading-relaxed">
                        Reduce the opacity. Trafficy builds software to create transparency and reduce ambiguity in your digital communications.
                    </p>
                </div>
                <div class="flex justify-end space-x-12">
                    <div>
                        <h4 class="font-semibold text-slate-900 text-sm mb-3">Social</h4>
                        <ul class="space-y-2 text-sm text-slate-500">
                            <li><a href="https://discord.gg/6Mm2jXJAqc" target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 transition">Discord</a></li>
                            <li><a href="https://x.com/TrafficyInc" target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 transition">Twitter / X</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('pillow-container');
            if (!container) return;

            function createPillow() {
                const pillow = document.createElement('div');
                pillow.classList.add('pillow');
                
                const size = Math.random() * 30 + 20; 
                const left = Math.random() * 100; 
                const duration = Math.random() * 5 + 8; 
                const color = Math.random() > 0.5 ? '#cbd5e1' : '#e2e8f0'; 

                pillow.style.width = `${size}px`;
                pillow.style.height = `${size * 0.8}px`; 
                pillow.style.left = `${left}%`;
                pillow.style.backgroundColor = color;
                pillow.style.animationDuration = `${duration}s`;

                container.appendChild(pillow);

                setTimeout(() => {
                    pillow.remove();
                }, duration * 1000);
            }

            setInterval(createPillow, 600); 
        });
    </script>
</body>
</html>